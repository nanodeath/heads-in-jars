{
  "name": "ai-meeting-simulator",
  "version": "1.0.0",
  "description": "Simulate meetings with AI agents using Claude API",
  "main": "dist/index.js",
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "prebuild": "npm run format",
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsc && node dist/index.js",
    "format": "node_modules/.bin/biome check --write ./src --max-diagnostics=0",
    "ci": "tsc --noEmit && node_modules/.bin/biome ci ./src",
    "validate": "node dist/index.js --validate && npm run ci",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "ai",
    "claude",
    "meeting",
    "simulator",
    "anthropic"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "~0.39.0",
    "@inquirer/prompts": "^7.4.0",
    "chalk": "^5.4.1",
    "dotenv": "^16.4.7",
    "figlet": "^1.8.0",
    "ora": "^8.2.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/figlet": "^1.7.0",
    "@types/node": "^20.0",
    "typescript": "^5.3.3"
  }
}
